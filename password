#!/bin/bash

#init flags for options

#-o for output
#this flag will save in custom path our current directory
flag_o=$PWD
#-s for not special char
flag_s=false
#-n for not numbers
flag_n=false
#-c for number of chars
flag_c=false

specialChar='!@#$%^&*()_+[]{}|;:,.<>?'
uppercaseChar='A-Z'
lowrcaseChar='a-z'
numChar='0-9'
len=16


if $flag_s; then
  specialChar=
elif $flag_n;then
  numbChar=
fi
codingChar=$uppercaseChar$lowrcaseChar$numbChar$specialChar
  
random_string=$(head /dev/urandom | tr -dc $codingChar | head -c $len)

echo $random_string
